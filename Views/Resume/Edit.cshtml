@model ResumeManager.Models.Applicant

@{
    ViewData["Title"] = "Edit Applicant";
}

<div class="container-fluid col-12 mx-auto pt-0 p-0">
    <div class="card-header bg-secondary text-white text-center p-1" style="height:35px;">
        <h5>Edit Applicant</h5>
    </div>
    <form ID="ApplicantForm" enctype="multipart/form-data" asp-action="Edit">
        <div class="container-fluid btn-group p-0 m-0">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PhotoUrl" />
            <div class="col-8">
                <div class="row">
                    <div class="col-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="ProfilePhoto" class="control-label"></label>
                            <div class="custom-file">
                                <input asp-for="ProfilePhoto" class="custom-file-input" id="customFile" onchange="document.getElementById('PreviewPhoto').src = window.URL.createObjectURL(this.files[0])" />
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                            <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-control" asp-items="ViewBag.Gender"></select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Qualification" class="control-label"></label>
                        <input asp-for="Qualification" class="form-control" />
                        <span asp-validation-for="Qualification" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="control-label">Exp. in Years</label>
                        <input asp-for="TotalExperience" class="form-control-plaintext readonly" />
                        <span asp-validation-for="TotalExperience" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group col-12 justify-content-center align-middle">
                    <img id="PreviewPhoto" src="~/images/@Model.PhotoUrl" alt="Logo Image" width="200" height="200" style="border:1px; margin-top:20px;" />
                </div>
            </div>
        </div>
        <div class="container col-12 btn-group">

            <div class=" container col-6 pl-0 ml-0">
                <div class="col-md-12 p-0 m-0 bg-light">
                    <table id="ExpTable" class="table table-sm CodesTable">
                        <thead>
                            <tr>
                                <th>
                                    CompanyName
                                </th>
                                <th>
                                    Designation
                                </th>
                                <th>
                                    Yearsworked
                                </th>
                                <th style="width:75px;">
                                    <button id="btnaddExperience" type="button" class="btn btn-sm btn-secondary visible" onclick="AddItem(this)">
                                        Add
                                    </button>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Experiences.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input asp-for="@Model.Experiences[i].CompanyName" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="@Model.Experiences[i].Designation" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="@Model.Experiences[i].YearsWorked" class="form-control YearsWorked" />
                                        <span asp-validation-for="@Model.Experiences[i].YearsWorked" class="text-danger"></span>
                                    </td>
                                    <td style="width:60px;">
                                        <input type="hidden" asp-for="@Model.Experiences[i].IsDeleted" />
                                        <button id="btnremove-@i" type="button" class="btn btn-sm btn-danger visible" onclick="DeleteItem(this)">
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="container col-5">
                <div class="col-md-12 p-0 m-0 bg-light">
                    <table id="SoftwareExpTable" class="table table-sm CodesTable">
                        <thead>
                            <tr>
                                <th>
                                    Software
                                </th>
                                <th>
                                    Rating
                                </th>
                                <th style="width:60px;">
                                    <button id="btnaddSoftware" type="button" class="btn btn-sm btn-secondary visible" onclick="AddItem(this)">
                                        Add
                                    </button>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.SoftwareExperiences.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <select asp-for="@Model.SoftwareExperiences[i].SoftwareId" class="form-control"
                                                asp-items="ViewBag.Softwares"
                                                onchange="JsonOnProductChange(this)"></select>
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="@Model.SoftwareExperiences[i].IsHidden" />
                                        <select asp-for="@Model.SoftwareExperiences[i].Rating" class="form-control"
                                                asp-items="ViewBag.Rating"></select>
                                    </td>

                                    <td style="width:60px;">
                                        <button id="btnremoveSoft-@i" type="button" class="btn btn-sm btn-danger visible"
                                                onclick="DeleteItem(this)">
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <input type="hidden" id="hdnlastIndex" value="0" />
        <div class="col-12 btn-group p-0 m-0">
            <div class="col-6 form-group text-right p-0 pr-2">
                <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
            </div>
            <div class="col-6 form-group text-left p-0">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
